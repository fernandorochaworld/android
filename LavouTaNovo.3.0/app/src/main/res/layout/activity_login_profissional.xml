<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.inteligenti.lavoutanovov2.LoginProfissionalActivity"
    android:background="@color/graylight">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_margin="25dp"
        app:cardCornerRadius="20dp"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginVertical="25dp"
                android:layout_gravity="center"
                android:text="Login Profissional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etEmail"
                android:inputType="textEmailAddress"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_field"
                android:hint="Email *"
                android:paddingLeft="13dp" />

            <EditText
                android:id="@+id/etSenha"
                android:inputType="textPassword"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_field"
                android:hint="Senha *"
                android:paddingLeft="13dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnLoginProfissionalVoltar"
                    android:layout_marginVertical="25dp"
                    android:layout_marginHorizontal="4dp"
                    android:textColor="#424242"
                    android:background="@drawable/btn_gray_gradient"
                    android:text="Voltar"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="40dp" />
                <Button
                    android:id="@+id/btnLoginProfissionalEntrar"
                    android:layout_marginVertical="25dp"
                    android:layout_marginHorizontal="4dp"
                    android:textColor="#fff"
                    android:background="@drawable/buttonstyleithgradient"
                    android:text="Entrar"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="40dp" />
            </LinearLayout>



            <TextView
                android:id="@+id/linkLoginProfissionalEsqueciSenha"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ESQUECI MINHA SENHA" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</ScrollView>
